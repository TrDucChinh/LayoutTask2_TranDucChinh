<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/left_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_minus6sdp"
        android:background="@drawable/bg_description"
        app:layout_constraintBottom_toBottomOf="@id/tvDescription3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle1"
        app:layout_constraintWidth_percent="0.1" />


    <View
        android:id="@+id/bg_middle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_minus6sdp"
        android:background="@drawable/bg_middle"
        app:layout_constraintBottom_toBottomOf="@id/tvDescription2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle1"
        app:layout_constraintWidth_percent="0.1" />

    <View
        android:id="@+id/bg_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_top"
        app:layout_constraintBottom_toBottomOf="@id/tvDescription1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvTitle1"
        app:layout_constraintWidth_percent="0.1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_lock"
        app:layout_constraintBottom_toBottomOf="@id/tvDescription1"
        app:layout_constraintEnd_toEndOf="@id/bg_top"
        app:layout_constraintStart_toStartOf="@id/bg_top"
        app:layout_constraintTop_toTopOf="@id/tvTitle1" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/notifications"
        app:layout_constraintBottom_toBottomOf="@id/tvDescription2"
        app:layout_constraintEnd_toEndOf="@id/bg_middle"
        app:layout_constraintStart_toStartOf="@id/bg_middle"
        app:layout_constraintTop_toTopOf="@id/tvTitle2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/star"
        app:layout_constraintBottom_toBottomOf="@id/tvDescription3"
        app:layout_constraintEnd_toEndOf="@id/bg_middle"
        app:layout_constraintStart_toStartOf="@id/bg_middle"
        app:layout_constraintTop_toTopOf="@id/tvTitle3" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/title_description"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bg_top"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="@font/nunito_sans_regular"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/tvTitle1"
        app:layout_constraintStart_toStartOf="@id/tvTitle1"
        app:layout_constraintTop_toBottomOf="@id/tvTitle1"
        tools:text="Your Premium subscription begins and you’ll be charged" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_36sdp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/title_description"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_description"
        app:layout_constraintTop_toBottomOf="@id/tvDescription1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"

        android:fontFamily="@font/nunito_sans_regular"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/tvTitle2"
        app:layout_constraintStart_toStartOf="@id/tvTitle2"
        app:layout_constraintTop_toBottomOf="@id/tvTitle2"
        tools:text="Your Premium sYour Premium subscription begins and you’ll be chargedYour Premium subscription begins and you’ll be chargedYour Premium subscription begins and you’ll be chargedYour Premium subscription begins and you’ll be chargedubscription begins and you’ll be charged  Your Premium subscription begins and you’ll be charged Your Premium subscription begins and you’ll be charged  " />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_36sdp"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/title_description"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_description"
        app:layout_constraintTop_toBottomOf="@id/tvDescription2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:fontFamily="@font/nunito_sans_regular"
        android:includeFontPadding="false"
        android:text="@string/title_description"
        android:textColor="#313131"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvTitle3"
        app:layout_constraintStart_toStartOf="@+id/tvTitle3"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle3"
        tools:text="Your Premium subscription begins and you’ll be chargedYour Premium subscription begins and you’ll be chargedYour Premium subscription begins and you’ll be charged" />


</androidx.constraintlayout.widget.ConstraintLayout>